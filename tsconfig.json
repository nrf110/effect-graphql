{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@effect-gql/core": ["packages/core/src/index.ts"],
      "@effect-gql/core/*": ["packages/core/src/*"]
    }
  },
  "include": [],
  "exclude": ["docs", "node_modules"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/node" },
    { "path": "./packages/bun" },
    { "path": "./packages/web" },
    { "path": "./packages/express" },
    { "path": "./packages/federation" },
    { "path": "./packages/opentelemetry" }
  ]
}
