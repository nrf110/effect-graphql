{
  "name": "effect-gql-monorepo",
  "version": "1.4.10",
  "repository": {
    "url": "https://github.com/nrf110/effect-gql"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "example:basic": "pnpm --filter @effect-gql/example-basic-server start",
    "example:dataloaders": "pnpm --filter @effect-gql/example-dataloaders start",
    "example:subscriptions": "pnpm --filter @effect-gql/example-subscriptions start",
    "example:full": "pnpm --filter @effect-gql/example-full-featured start",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:watch": "vitest",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "lint": "eslint packages/*/src packages/*/test",
    "lint:fix": "eslint --fix packages/*/src packages/*/test",
    "format": "prettier --write \"packages/*/src/**/*.ts\" \"packages/*/test/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\" \"packages/*/test/**/*.ts\"",
    "docs:dev": "npm run dev --prefix docs",
    "docs:build": "npm run build --prefix docs",
    "docs:preview": "npm run preview --prefix docs",
    "prepare-publish": "pnpm tsx scripts/prepare-publish.ts",
    "release": "pnpm run version:sync && pnpm run build && pnpm run prepare-publish && pnpm tsx scripts/publish.ts",
    "version:sync": "pnpm tsx scripts/sync-versions.ts",
    "version:bump": "pnpm tsx scripts/bump-version.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "tsx": "^4.19.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.8.0",
    "tsup": "^8.4.0",
    "turbo": "^2.7.5",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.26.1",
  "license": "MIT"
}
